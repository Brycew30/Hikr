
<%= simple_form_for(@trail) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Easy Does It" %>
    <%= f.input :path_type, placeholder: "Paved road" %>
    <%= f.input :length, placeholder: "3", hint: "In miles" %>
    <%= f.input :description, placeholder: "Flat and happy..." %>
    <%= f.input :location_id, collection: @locations, :include_blank => "Choose a state" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
